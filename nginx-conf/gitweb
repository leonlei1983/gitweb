server {
  listen 80;
  server_name localhost;

  location /gitweb.cgi {
    root /var/www/gitweb/;
    include fastcgi_params;
    gzip off;
    fastcgi_param SCRIPT_NAME $uri;
    fastcgi_pass  unix:/var/run/fcgiwrap.socket;
  }

  location / {
    root /var/www/gitweb/;
    index gitweb.cgi;
  }
}
